[v-cloak] {
  display: none !important;
}

.bg-theme {
  background: linear-gradient(to right, #f05f3e 0%, #ed3269 100%);
}

.bg-disabled {
  background-color: rgb(193, 193, 193);
}

.fc-theme {
  color: rgb(237, 57, 108);
}

.page {
  height: 100%;
}

.page,
.content {
  transition: .3s;
  max-width: none;
}

.page.active {
  background-color: rgba(0, 0, 0, 1);
}

.page.active .content {
  transform: scale(.92);
}

.yd-navbar {
  color: #fff;
}

.yd-navbar:after {
  border-bottom: 0;
}

.yd-navbar,
.yd-navbar-center-title,
.yd-back-icon {
  color: #fff !important;
}

.yd-scrolltab-nav {
  padding: .3rem 0;
}

.yd-scrolltab-active:active,
.yd-scrolltab-active {
  background: linear-gradient(to right, rgba(238, 57, 98, 1) 0, rgba(238, 57, 98, 1) .08rem, rgba(255, 255, 255, 1) .08rem, rgba(255, 255, 255, 1) 100%);
}

.yd-scrolltab-item:after {
  border-bottom-color: transparent;
}

.my-scrolltab-badge {
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  font-size: .24rem;
  display: inline-block;
  border-radius: 1000px;
  line-height: 1;
  padding: .04rem .12rem;
  white-space: nowrap;
  background-color: rgb(240, 93, 64);
}

.yd-scrolltab-content {
  padding: 0 0 .2rem 0;
}

.yd-scrolltab-content-item {
  padding-left: .26rem;
  position: relative;
}

.yd-scrolltab-content-item:after {
  content: "";
  position: absolute;
  z-index: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #e2e2e2;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}

.my-list-meal .yd-list-item:not(:last-child):after {
  border-bottom-color: #e2e2e2;
}

.yd-scrolltab-content-title {
  font-size: .26rem;
  margin-bottom: 0;
  padding-top: .2rem;
  padding-bottom: .24rem;
}

.yd-scrolltab-content-title:after {
  content: none;
}

.my-list-meal {
  padding: 0;
}

.my-list-meal .yd-list-item {
  padding: 15px 0 16px;
}

.my-list-meal .yd-list-item .yd-list-img {
  position: relative;
  width: 1.4rem;
  padding: 0.7rem 0;
}

.my-list-meal .yd-list-item .yd-list-img img {
  margin-top: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.my-list-meal .yd-list-item .yd-list-title {
  max-height: none;
  display: block;
}

.my-list-title,
.my-list-title-note {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.my-list-title {
  font-size: .32rem;
  font-weight: 800;
  color: #333;
  line-height: 1.25;
  margin-bottom: .05rem;
  -webkit-line-clamp: 3;
}

.my-list-title-note {
  font-size: .24rem;
  font-weight: 400;
  color: #999;
  line-height: 1.125;
  margin-bottom: .05rem;
  -webkit-line-clamp: 2;
}

.my-list-meal .yd-list-item .yd-list-mes {
  padding-left: .2rem;
  padding-right: .3rem;
}

.my-list-meal .yd-list-item .yd-list-other {
  padding-top: 0;
}

.my-price {
  font-size: .32rem;
  line-height: 1;
}

.my-price>em {
  font-size: .875em;
  padding-right: .15em;
}

.my-price>small {
  font-size: .625em;
  padding-left: .3em;
}

.my-price-old {
  font-size: .24rem;
  color: #999;
  line-height: 1;
  text-decoration: line-through;
}

.my-price-old:first-child {
  padding-right: .25em;
}

.my-price-old:last-child {
  padding-left: .25em;
}

.my-list-format-btn {
  font-size: .24rem;
  height: .44rem;
  line-height: .44rem;
  border-radius: .22rem;
  padding: 0 .18rem;
  border: 0;
  color: rgb(240, 93, 64);
  background-color: rgb(251, 214, 207)
}

.yd-scrollview {
  position: relative;
  z-index: 0;
}

.my-buy {
  position: relative;
  z-index: 1;
  width: 100%;
  height: .98rem;
  background-color: rgb(245, 245, 245);
  box-shadow: 0 -.1rem .3rem rgba(0, 0, 0, .15);
}

.my-buy-box,
.my-buy-box .yd-flexbox-item {
  height: 100%;
}

.my-buy-left {
  position: relative;
  width: 100%;
  height: 100%;
  padding-left: .3rem;
}

.my-buy-btn {
  position: absolute;
  top: -.3rem;
  left: .4rem;
  width: .84rem;
  height: .84rem;
  line-height: .84rem;
  text-align: center;
  border-radius: 9999px;
  border: .07rem solid rgb(245, 245, 245);
  box-sizing: content-box;
  box-shadow: 0 -.1rem .2rem rgba(0, 0, 0, .1);
}

.my-buy-btn-amount {
  position: absolute;
  right: -.15rem;
  bottom: -.06rem;
  font-size: .24rem;
  color: #fff;
  min-width: .42rem;
  height: .42rem;
  line-height: .38rem;
  text-align: center;
  border: .04rem solid #fff;
  border-radius: 9999px;
  background-color: rgb(83, 67, 194);
  opacity: 0;
}

.my-buy-btn-amount.active {
  animation: bounceIn 1s .2s ease both;
  opacity: 1;
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(.3)
  }
  50% {
    opacity: 1;
    transform: scale(1.2)
  }
  70% {
    transform: scale(.9)
  }
  100% {
    transform: scale(1)
  }
}

.my-buy-btn + .my-price {
  padding-left: 1.2rem;
}

.my-buy-right {
  height: 100%;
}

.my-buy-pay {
  width: 2rem;
  height: 100%;
  border: none;
}

.my-buy-pay-text {
  font-size: .32rem;
  color: #fff;
}

.my-btn-box {
  padding: .2rem .2rem .6rem;
}

.my-btn {
  height: .8rem;
  margin-top: 0;
  font-size: .32rem;
}

.my-btn.my-btn-shade {
  box-shadow: 0 .1rem .3rem rgba(0, 0, 0, .2);
}

.yd-confirm-ft>a.primary {
  color: rgb(237, 57, 108);
}

.my-container {
  padding-top: .24rem;
}

.my-box {
  background-color: #fff;
  position: relative;
}

.my-box:not(:last-child) {
  margin-bottom: .2rem;
}

.my-box:before,
.my-box:after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  border-bottom: 1px solid #e1e1e1;
  transform: scaleY(.5);
  transform-origin: 0 0;
}

.my-box:before {
  top: 0;
}

.my-box:after {
  bottom: 0;
}

.opts .yd-mask {
  top: 1rem;
}

.opts .yd-popup-center {
  transform: translate(-50%, 0) scale(1);
  transition: transform .1s;
}

.opts .yd-popup-center.yd-popup-show {
  top: 1rem;
  transform: translate(-50%, 0) scale(1);
}
